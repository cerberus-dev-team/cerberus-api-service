{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "target": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "typeRoots": ["src/@types"],
    "baseUrl": "./",
  },
  "include": ["src/**/*", "test/**/*", "prisma/seed.ts"],
}
